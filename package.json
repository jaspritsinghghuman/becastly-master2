{
  "name": "becastly",
  "version": "1.0.0",
  "description": "Multi-Channel Marketing SaaS",
  "main": "server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node server.js",
    "worker": "node dist/workers/campaign.worker.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "marketing",
    "saas",
    "whatsapp",
    "email",
    "sms",
    "telegram"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.2.2",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.3.1",
    "axios": "^1.7.9",
    "bullmq": "^5.41.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-zod": "^1.4.0",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "openai": "^4.85.1",
    "papaparse": "^5.5.2",
    "prisma": "^6.3.1",
    "razorpay": "^2.9.6",
    "stripe": "^17.7.0",
    "twilio": "^5.4.4",
    "xlsx": "^0.18.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@types/papaparse": "^5.3.15",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
